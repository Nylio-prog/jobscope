---
import SiteFooter from '../components/SiteFooter.astro';
import SiteHeader from '../components/SiteHeader.astro';
import '../styles/global.css';

type Props = {
  title: string;
  description?: string;
  noIndex?: boolean;
};

const { title, description = 'See what jobs are actually like.', noIndex = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.svg" />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
    <title>{title} | JobScope</title>
    <script is:inline>
      (() => {
        const storageKey = 'jobscope_theme';
        const selectableThemes = new Set(['sand', 'coastal', 'graphite']);
        try {
          const storedTheme = localStorage.getItem(storageKey);
          if (!storedTheme || !selectableThemes.has(storedTheme) || storedTheme === 'sand') {
            return;
          }

          document.documentElement.dataset.theme = storedTheme;
        } catch {
          // Ignore storage errors; default theme remains active.
        }
      })();
    </script>
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to main content</a>
    <div class="site-shell">
      <SiteHeader />
      <main id="main">
        <slot />
      </main>
      <SiteFooter />
    </div>
    <script is:inline>
      (() => {
        const themeStorageKey = 'jobscope_theme';
        const themes = [
          { id: 'sand', label: 'Sand' },
          { id: 'coastal', label: 'Coastal' },
          { id: 'graphite', label: 'Graphite' },
        ];
        const root = document.documentElement;
        const toggle = document.querySelector('[data-theme-toggle]');
        const label = document.querySelector('[data-theme-toggle-label]');

        const normalizeTheme = (theme) =>
          themes.some((candidate) => candidate.id === theme) ? theme : 'sand';

        const getThemeLabel = (theme) => themes.find((candidate) => candidate.id === theme)?.label ?? 'Sand';

        const setTheme = (theme) => {
          const normalizedTheme = normalizeTheme(theme);

          if (normalizedTheme === 'sand') {
            delete root.dataset.theme;
          } else {
            root.dataset.theme = normalizedTheme;
          }

          if (label) {
            label.textContent = `Theme: ${getThemeLabel(normalizedTheme)}`;
          }

          try {
            localStorage.setItem(themeStorageKey, normalizedTheme);
          } catch {
            // Ignore storage errors.
          }
        };

        const initialTheme = normalizeTheme(root.dataset.theme ?? 'sand');
        setTheme(initialTheme);

        if (toggle instanceof HTMLButtonElement) {
          toggle.addEventListener('click', () => {
            const currentTheme = normalizeTheme(root.dataset.theme ?? 'sand');
            const currentIndex = themes.findIndex((theme) => theme.id === currentTheme);
            const nextTheme = themes[(currentIndex + 1) % themes.length]?.id ?? 'sand';
            setTheme(nextTheme);
          });
        }

        const path = window.location.pathname;
        const eventName =
          path === '/'
            ? 'page_home'
            : path === '/jobs'
              ? 'page_jobs'
              : path.startsWith('/jobs/')
                ? 'page_job_detail'
                : path === '/share'
                  ? 'page_share_start'
                  : null;

        if (!eventName) {
          return;
        }

        const storageKey = 'jobscope_session_id';
        const currentSessionId =
          window.sessionStorage.getItem(storageKey) ??
          `${Date.now().toString(36)}-${Math.random().toString(36).slice(2, 8)}`;
        window.sessionStorage.setItem(storageKey, currentSessionId);

        const payload = JSON.stringify({
          event: eventName,
          path,
          sessionId: currentSessionId,
        });

        if (navigator.sendBeacon) {
          const blob = new Blob([payload], { type: 'application/json' });
          navigator.sendBeacon('/api/events', blob);
          return;
        }

        void fetch('/api/events', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: payload,
          keepalive: true,
        });
      })();
    </script>
  </body>
</html>
