---
import SiteFooter from '../components/SiteFooter.astro';
import SiteHeader from '../components/SiteHeader.astro';
import '../styles/global.css';

type Props = {
  title: string;
  description?: string;
  noIndex?: boolean;
};

const { title, description = 'See what jobs are actually like.', noIndex = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.svg" />
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
    <title>{title} | JobScope</title>
    <script is:inline>
      (() => {
        const storageKey = 'jobscope_theme';
        try {
          const storedTheme = localStorage.getItem(storageKey);
          if (storedTheme === 'coastal') {
            document.documentElement.dataset.theme = 'coastal';
          }
        } catch {
          // Ignore storage errors; default theme remains active.
        }
      })();
    </script>
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to main content</a>
    <div class="site-shell">
      <SiteHeader />
      <main id="main">
        <slot />
      </main>
      <SiteFooter />
    </div>
    <script is:inline>
      (() => {
        const themeStorageKey = 'jobscope_theme';
        const root = document.documentElement;
        const toggle = document.querySelector('[data-theme-toggle]');
        const label = document.querySelector('[data-theme-toggle-label]');

        const setTheme = (theme) => {
          if (theme === 'coastal') {
            root.dataset.theme = 'coastal';
          } else {
            delete root.dataset.theme;
          }

          if (label) {
            label.textContent = `Theme: ${theme === 'coastal' ? 'Coastal' : 'Sand'}`;
          }

          try {
            localStorage.setItem(themeStorageKey, theme);
          } catch {
            // Ignore storage errors.
          }
        };

        const initialTheme = root.dataset.theme === 'coastal' ? 'coastal' : 'sand';
        setTheme(initialTheme);

        if (toggle instanceof HTMLButtonElement) {
          toggle.addEventListener('click', () => {
            const nextTheme = root.dataset.theme === 'coastal' ? 'sand' : 'coastal';
            setTheme(nextTheme);
          });
        }

        const path = window.location.pathname;
        const eventName =
          path === '/'
            ? 'page_home'
            : path === '/jobs'
              ? 'page_jobs'
              : path.startsWith('/jobs/')
                ? 'page_job_detail'
                : path === '/share'
                  ? 'page_share_start'
                  : null;

        if (!eventName) {
          return;
        }

        const storageKey = 'jobscope_session_id';
        const currentSessionId =
          window.sessionStorage.getItem(storageKey) ??
          `${Date.now().toString(36)}-${Math.random().toString(36).slice(2, 8)}`;
        window.sessionStorage.setItem(storageKey, currentSessionId);

        const payload = JSON.stringify({
          event: eventName,
          path,
          sessionId: currentSessionId,
        });

        if (navigator.sendBeacon) {
          const blob = new Blob([payload], { type: 'application/json' });
          navigator.sendBeacon('/api/events', blob);
          return;
        }

        void fetch('/api/events', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: payload,
          keepalive: true,
        });
      })();
    </script>
  </body>
</html>
