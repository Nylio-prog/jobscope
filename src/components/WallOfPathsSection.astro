---
import { listApprovedJobProfiles } from '../lib/job-profiles-repository';

const jobs = (await listApprovedJobProfiles()).slice(0, 12);
---

<section class="wall-grid">
  {
    jobs.map((job, index) => (
      <a
        class="panel tile animate-rise"
        style={`animation-delay:${index * 60}ms`}
        href={`/jobs/${job.slug}`}
      >
        <p class="tile-label">{job.industry}</p>
        <h2>{job.roleTitle}</h2>
        <p>{job.location}</p>
      </a>
    ))
  }
</section>

<style>
  .wall-grid {
    column-count: 3;
    column-gap: 0.8rem;
  }

  .tile {
    display: inline-grid;
    width: 100%;
    margin-bottom: 0.8rem;
    text-decoration: none;
    gap: 0.4rem;
    break-inside: avoid;
    background: var(--tile-bg);
  }

  .tile h2 {
    margin: 0;
    font-size: 1.1rem;
  }

  .tile p {
    margin: 0;
    color: var(--ink-soft);
  }

  .tile-label {
    display: inline-flex;
    width: fit-content;
    padding: 0.16rem 0.5rem;
    border-radius: 999px;
    background: #fff;
    border: 1px solid var(--line);
    font-size: 0.79rem;
  }

  @media (max-width: 900px) {
    .wall-grid {
      column-count: 2;
    }
  }

  @media (max-width: 580px) {
    .wall-grid {
      column-count: 1;
    }
  }
</style>
