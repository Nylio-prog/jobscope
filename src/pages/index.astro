---
import Layout from '../layouts/Layout.astro';
import { listApprovedJobProfiles } from '../lib/job-profiles-repository';

const jobs = (await listApprovedJobProfiles()).slice(0, 12);
---

<Layout title="Wall of Paths" description="Explore real career stories in the Wall of Paths view.">
  <section class="page-hero animate-rise">
    <p><strong>JobScope</strong></p>
    <h1>See what jobs are actually like.</h1>
    <p>
      Wall of Paths is now the primary discovery experience. Explore approved job stories, then
      contribute your own.
    </p>
    <div class="cta-row">
      <a class="btn btn-primary" href="/jobs">Browse all jobs</a>
      <a class="btn btn-secondary" href="/share">Share your story</a>
      <a class="btn btn-secondary" href="/guidelines">Submission guidelines</a>
      <a class="btn btn-secondary" href="/moderation">Moderation</a>
    </div>
  </section>

  <section class="wall-grid">
    {
      jobs.map((job, index) => (
        <a
          class="panel tile animate-rise"
          style={`animation-delay:${index * 60}ms`}
          href={`/jobs/${job.slug}`}
        >
          <p class="tile-label">{job.industry}</p>
          <h2>{job.roleTitle}</h2>
          <p>{job.location}</p>
        </a>
      ))
    }
  </section>
</Layout>

<style>
  .wall-grid {
    column-count: 3;
    column-gap: 0.8rem;
  }

  .tile {
    display: inline-grid;
    width: 100%;
    margin-bottom: 0.8rem;
    text-decoration: none;
    gap: 0.4rem;
    background:
      linear-gradient(150deg, rgba(39, 130, 108, 0.11), rgba(240, 139, 62, 0.12)), var(--bg-panel);
  }

  .tile h2 {
    margin: 0;
    font-size: 1.1rem;
  }

  .tile p {
    margin: 0;
    color: var(--ink-soft);
  }

  .tile-label {
    display: inline-flex;
    width: fit-content;
    padding: 0.16rem 0.5rem;
    border-radius: 999px;
    background: #fff;
    border: 1px solid var(--line);
    font-size: 0.79rem;
  }

  @media (max-width: 900px) {
    .wall-grid {
      column-count: 2;
    }
  }

  @media (max-width: 580px) {
    .wall-grid {
      column-count: 1;
    }
  }
</style>
