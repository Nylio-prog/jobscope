---
import Layout from '../layouts/Layout.astro';
import { getApprovedJobs } from '../lib/jobs';

const jobs = getApprovedJobs();
const workModeCounts = jobs.reduce(
  (acc, job) => {
    acc[job.workMode] = (acc[job.workMode] ?? 0) + 1;
    return acc;
  },
  {} as Record<string, number>,
);
---

<Layout title="Mission Control" description="Dashboard-first career exploration concept.">
  <section class="page-hero">
    <p><strong>/5 Mission Control</strong></p>
    <h1>Data-first snapshot of real job stories.</h1>
    <p>
      This version is built for analytical users who want a compact overview before drilling into
      specific profiles.
    </p>
  </section>

  <section class="control-grid">
    <article class="panel">
      <h2>Total approved stories</h2>
      <p class="metric">{jobs.length}</p>
    </article>
    <article class="panel">
      <h2>Industries represented</h2>
      <p class="metric">{new Set(jobs.map((job) => job.industry)).size}</p>
    </article>
    <article class="panel">
      <h2>Work mode split</h2>
      <ul>
        {
          Object.entries(workModeCounts).map(([mode, count]) => (
            <li>
              <strong>{mode}:</strong> {count}
            </li>
          ))
        }
      </ul>
    </article>
    <article class="panel">
      <h2>Fast actions</h2>
      <div class="cta-row">
        <a class="btn btn-primary" href="/jobs">Open directory</a>
        <a class="btn btn-secondary" href="/share">Share experience</a>
      </div>
    </article>
  </section>
</Layout>

<style>
  .control-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 0.9rem;
  }

  .metric {
    font-size: clamp(2rem, 8vw, 3rem);
    margin: 0;
    letter-spacing: -0.03em;
    font-weight: 800;
  }

  .control-grid h2 {
    margin: 0 0 0.7rem;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--ink-soft);
  }

  .control-grid ul {
    margin: 0;
    padding-left: 1rem;
    color: var(--ink-soft);
  }
</style>
