---
import Layout from '../layouts/Layout.astro';
import { getApprovedJobs } from '../lib/jobs';

const jobs = getApprovedJobs().slice(0, 12);
---

<Layout title="Wall of Paths" description="Collage wall for fast path discovery.">
  <section class="page-hero">
    <p><strong>/4 Wall of Paths</strong></p>
    <h1>Shuffle through jobs like a discover board.</h1>
    <p>
      This concept focuses on quick scanning. It is intentionally denser and tactile compared to the
      other variants.
    </p>
  </section>

  <section class="wall-grid">
    {
      jobs.map((job, index) => (
        <a
          class="panel tile animate-rise"
          style={`animation-delay:${index * 60}ms`}
          href={`/jobs/${job.slug}`}
        >
          <p class="tile-label">{job.industry}</p>
          <h2>{job.roleTitle}</h2>
          <p>{job.location}</p>
        </a>
      ))
    }
  </section>
</Layout>

<style>
  .wall-grid {
    column-count: 3;
    column-gap: 0.8rem;
  }

  .tile {
    display: inline-grid;
    width: 100%;
    margin-bottom: 0.8rem;
    text-decoration: none;
    gap: 0.4rem;
    background:
      linear-gradient(150deg, rgba(39, 130, 108, 0.11), rgba(240, 139, 62, 0.12)), var(--bg-panel);
  }

  .tile h2 {
    margin: 0;
    font-size: 1.1rem;
  }

  .tile p {
    margin: 0;
    color: var(--ink-soft);
  }

  .tile-label {
    display: inline-flex;
    width: fit-content;
    padding: 0.16rem 0.5rem;
    border-radius: 999px;
    background: #fff;
    border: 1px solid var(--line);
    font-size: 0.79rem;
  }

  @media (max-width: 900px) {
    .wall-grid {
      column-count: 2;
    }
  }

  @media (max-width: 580px) {
    .wall-grid {
      column-count: 1;
    }
  }
</style>
